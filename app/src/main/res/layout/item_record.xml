<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@color/gray"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/space_10"
    android:showDividers="middle|end"
    android:weightSum="12">

    <TextView
        android:id="@+id/nr"
        style="@style/TableItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:paddingHorizontal="@dimen/space_3"
        android:text="@string/nr"
        android:textColor="@color/light_blue" />

    <TextView
        android:id="@+id/ring_series"
        style="@style/TableItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="start"
        android:paddingHorizontal="@dimen/space_3"
        android:text="@string/ring_series"
        android:textColor="@color/light_blue" />


    <TextView
        android:id="@+id/gender"
        style="@style/TableItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/sex"
        android:textColor="@color/light_blue" />

    <TextView
        android:id="@+id/color"
        style="@style/TableItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="start"
        android:maxLength="10"
        android:paddingHorizontal="@dimen/space_3"
        android:text="@string/color"
        android:textColor="@color/light_blue" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vaccine_tv"
            style="@style/TableItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/space_3"
            android:text="@string/vaccine"
            android:textColor="@color/light_blue"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/first_vaccine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-6dp"
            android:layout_marginEnd="-6dp"
            android:buttonTint="@color/light_blue"
            android:clickable="false"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/second_vaccine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-6dp"
            android:layout_marginEnd="-6dp"
            android:buttonTint="@color/light_blue"
            android:clickable="false"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/third_vaccine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-6dp"
            android:layout_marginEnd="-6dp"
            android:buttonTint="@color/light_blue"
            android:clickable="false"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
