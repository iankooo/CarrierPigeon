<resources>
    <!-- Base application theme. -->
    <style name="Theme.CarrierPigeon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorControlActivated">@color/light_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CarrierPigeonAndroid.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/light_blue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/light_blue</item>
        <item name="android:navigationBarColor">@color/light_blue</item>
    </style>

    <style name="SubTitleLabel">
        <item name="fontFamily">@font/rooney_sans_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">-0.026</item>
        <item name="lineHeight">@dimen/space_27</item>
    </style>

    <style name="PigeonNickname">
        <item name="fontFamily">@font/rooney_sans_blk</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontWeight">900</item>
        <item name="android:letterSpacing">-0.026</item>
        <item name="lineHeight">@dimen/space_27</item>
    </style>

    <style name="PigeonColor">
        <item name="fontFamily">@font/rooney_sans_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontWeight">800</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="lineHeight">@dimen/space_20</item>
    </style>

    <style name="PigeonSeries">
        <item name="fontFamily">@font/rooney_sans_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontWeight">800</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="lineHeight">@dimen/space_20</item>
    </style>

    <style name="PigeonDetails">
        <item name="fontFamily">@font/rooney_sans_hv</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/regular_gray</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="lineHeight">@dimen/space_25</item>
    </style>

    <style name="TableItem">
        <item name="fontFamily">@font/rooney_sans_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontWeight">800</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="lineHeight">@dimen/space_20</item>
    </style>

    <style name="CustomDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="OutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintTextColor">@color/light_blue</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@drawable/selector_stroke_color</item>
        <item name="startIconTint">@color/light_blue</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/space_15</item>
        <item name="boxCornerRadiusBottomStart">@dimen/space_15</item>
        <item name="boxCornerRadiusTopEnd">@dimen/space_15</item>
        <item name="boxCornerRadiusTopStart">@dimen/space_15</item>
        <item name="colorControlActivated">@color/light_blue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/rooney_sans_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">-0.026</item>
        <item name="lineHeight">@dimen/space_27</item>
    </style>

</resources>